{
  "name": "landing-page",
  "version": "1.0.0",
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15.8"
  },
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch src/scss:src/css",
    "dev": "live-server src",
    "start": "npm-run-all --parallel watch:sass dev",
    "build": "sass src/scss:dist/css --no-source-map --style=compressed",
    "lint": "eslint src --ext .js",
    "lintfix": "eslint src --ext .js --fix",
    "format": "prettier \"**/*.{.scss,js,json,html}\" --write",
    "formatcheck": "prettier \"**/*.{.scss,js,json,html}\" --check",
    "stylelint": "stylelint \"src/scss/**/*.scss\"",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "sass": "^1.81.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0"
  },
  "lint-staged": {
    "src/**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "src/**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "src/**/*.{json,html}": "prettier --write"
  }
}
