{
  "name": "landing-page",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=8.15.8"
  },
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch src/scss:src/css",
    "dev": "live-server src",
    "start": "npm-run-all --parallel watch:sass dev",
    "lint": "eslint src --ext .js",
    "lintfix": "eslint src --ext .js --fix",
    "format": "prettier \"**/*.{.scss,js,json,html}\" --write",
    "formatcheck": "prettier \"**/*.{.scss,js,json,html}\" --check",
    "stylelint": "stylelint \"src/scss/**/*.scss\"",
    "prepare": "husky install",
    "clean": "rimraf dist",
    "copy:assets": "copyfiles -u 1 \"src/assets/**/*\" dist",
    "build:css": "sass src/scss:dist/css --no-source-map --style=compressed",
    "build:html": "html-minifier --input-dir src --output-dir dist --collapse-whitespace --remove-comments --file-ext html",
    "build:js": "rollup -c && terser dist/js/bundle.js -o dist/js/bundle.min.js --compress --mangle",
    "build": "npm-run-all clean copy:assets build:css build:html build:js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "html-minifier": "^4.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "live-server": "^1.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.28.0",
    "sass": "^1.81.0",
    "stylelint": "^16.11.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "terser": "^5.37.0"
  },
  "lint-staged": {
    "src/**/*.scss": [
      "prettier --write",
      "stylelint --fix"
    ],
    "src/**/*.js": [
      "prettier --write",
      "eslint"
    ],
    "src/**/*.{json,html}": "prettier --write"
  }
}
